From 0000000000000000000000000000000000000000 Mon Sep 17 00:00:00 2001
From: Paul1365972 <paul1365972@gmail.com>
Date: Mon, 13 Apr 2020 00:14:15 +0200
Subject: [PATCH] Add gradle support


diff --git a/.gitignore b/.gitignore
index e431e3435737e28394d81b56568a08b3c3148b9b..5c19022b09c42feb5592cc551262f7995e419a62 100644
--- a/.gitignore
+++ b/.gitignore
@@ -13,6 +13,11 @@
 # maven
 /target
 
+# Gradle
+build/
+gradle/
+.gradle/
+
 # vim
 .*.sw[a-p]
 
diff --git a/build.gradle b/build.gradle
new file mode 100644
index 0000000000000000000000000000000000000000..d3164c9496eb12687856431b653a9848cfa70768
--- /dev/null
+++ b/build.gradle
@@ -0,0 +1,46 @@
+plugins {
+    id 'java'
+    id 'maven-publish'
+    id 'com.github.johnrengelman.shadow' version '5.2.0'
+}
+
+sourceCompatibility = JavaVersion.VERSION_1_8
+
+shadowJar {
+    exclude 'module-info.class'
+}
+
+repositories {
+    mavenCentral()
+    maven {
+        name 'spigotmc-public'
+        url 'https://hub.spigotmc.org/nexus/content/groups/public/'
+    }
+    maven {
+        name 'sonatype'
+        url 'https://oss.sonatype.org/content/groups/public/'
+    }
+}
+
+dependencies {
+    compileOnly "it.unimi.dsi:fastutil:8.2.2"
+    implementation "commons-lang:commons-lang:2.6"
+    implementation "com.google.code.findbugs:jsr305:1.3.9"
+    implementation("com.googlecode.json-simple:json-simple:1.1.1") {
+        exclude group: 'junit', module: 'junit'
+    }
+    implementation "com.google.guava:guava:21.0"
+    implementation "com.google.code.gson:gson:2.8.0"
+    implementation "net.md-5:bungeecord-chat:1.15-SNAPSHOT"
+    implementation "org.yaml:snakeyaml:1.25"
+    compileOnly "org.jetbrains:annotations:18.0.0"
+    testCompileOnly "org.jetbrains:annotations:18.0.0"
+    implementation "org.slf4j:slf4j-api:1.7.25"
+
+    testImplementation "junit:junit:4.13"
+    testImplementation "org.hamcrest:hamcrest-library:1.3"
+    testImplementation "org.ow2.asm:asm-tree:7.3.1"
+
+    implementation "org.ow2.asm:asm:7.3.1"
+    implementation "org.ow2.asm:asm-commons:7.3.1"
+}
